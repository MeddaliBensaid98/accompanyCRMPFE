<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_accompany_offer_form" model="ir.ui.view">
        <field name="name">accompany.offer.form</field>
        <field name="model">accompany.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    

                    <div class="oe_title">
                        <h1>
                            <field name="reference" readonly="1"/>
                        </h1>
                    </div>
                    
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <group>
                        <field name="Offername"/>
                        <field name="Details"/>
                        <field name="Revenus"/>
                        <field name="active" invisible="1" />
                      
                    </group>
                    <div class="oe_chatter">
                            <field name="message_follower_ids"/>
                            <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_accompany_offer_tree" model="ir.ui.view">
        <field name="name">accompany.offer.tree</field>
        <field name="model">accompany.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reference"/>
                <field name="Offername"/>
                <field name="Details"/>
                <field name="Revenus"/>
       
            </tree>
        </field>
    </record>
    <record id="view_accompany_offer_search" model="ir.ui.view">
        <field name="name">accompany.offer.search</field>
        <field name="model">accompany.offer</field>
        <field name="arch" type="xml">
                <search>
                    <field name="reference"/>
                    <field name="Offername"/>
                    <field name="Details"/>
                    <field name="Revenus"/>
                   <separator/>
              
                   <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
                   
                
                </search> 
            
            
        </field>
        </record>
    
    <record id="action_accompany_offer" model="ir.actions.act_window">
        <field name="name">offers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">accompany.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_child': 1}</field>
      
    </record>
       <record id="todo_task_action" model="ir.actions.act_window">
        <field name="name">ToDo Task</field>
        <field name="res_model">accompany.offer</field>

      
    </record>
  

   

<menuitem id="mmenu_accompany_employe"
              name="Employe"
            parent="menu_accompany_root"
            action=""
             />
   
 
</odoo>
